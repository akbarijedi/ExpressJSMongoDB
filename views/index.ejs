<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/header') %>
    <title>TELLS Database</title>
</head>
<body dir="rtl">
    <div class="container card p-3 mx-auto m-5">
    <h1 class="">تلفن ها</h1>
<hr>
    <div class="d-flex flex-row justify-content-between">
<div>
    <!--  INSERT Tell Form -->
    <form action="/saveTell" method="post" class="my-3 col">
        <label class="hidden" for="personName" class="sr-print">نام</label>
        <input type="text" placeholder="نام/نام خانوادگی/سمت" name="personName" id="personName" class="">
        <label class="hidden" for="personTell">داخلی/تلفن</label>
        <input type="text" placeholder="تلفن/موبایل/داخلی" name="personTell" id="personTell">
        <input type="submit" value="ذخیره" class="btn btn-sm btn-info">
    </form>
    <!-- <%- include('../views/edit'); %> -->
</div>
<div>
    <!--  SEARCH Tells Form -->
    <form action="/search" method="post" class="my-3"><input type="text" class="mx-1" name="searchme" id="searchme" placeholder="جستجو"><input type="submit" value="جستجو" onchange=""></form>
</div>
</div>

    <table class="table table-striped table-responsive ">
        <thead>
            <th>نام</th>
            <th>تلفن/داخلی</th>
            <th>ابزارها</th>
        </thead>
        <tbody>
            <!--          TELLS List Begins         -->
            <% tells.forEach(tellrow => { %>
                <tr>
                    <td>
                        <%= tellrow.name %>
                    </td>
                    <td>
                        <%= tellrow.tell %>
                    </td>   
                    <td class="" style="width: 100px;">
                        <div class="d-inline-flex">
                        <form action="/del" method="post"><input type="hidden" value="<%= tellrow.id %>" name="deleteme"><input type="submit" class="btn btn-sm btn-outline-danger mx-1" value="حذف"></form>
                        <form action="/edit" method="get"><input type="hidden" value="<%= tellrow.id %>" name="editme"><input type="submit" class="btn btn-sm btn-outline-primary mx-1" value="ویرایش"></form>
                    </div>
                    </td>
                </tr>
            <% }) %>
            <!--    TELLS List End         -->
            
        </tbody>
    </table>
</div>
</body>
</html>